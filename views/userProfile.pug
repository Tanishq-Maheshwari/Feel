<!DOCTYPE html>
<html>

<head>
  <title>FEEL</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <!-- GoogleFonts -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat|Ubuntu|Oswald:wght@500|Kaushan+Script" rel="stylesheet">
  <!-- Stylesheets -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

  <!-- Fontawesome -->
  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
  <!-- Bootstrap js library -->

  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

  <link href="/css/profile.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/css/header.css">
  <link rel="icon" href="/favicon.ico">



</head>

<body  onload="setInputDate()">
  <section id="feel-nav" class="colored-section">
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/">FEEL</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon">
          </span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Welcome</a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/userProfile">Profile</a>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="#footer">Contact</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </section>


  <section class="main">
    <div class="container emp-profile">
      <div class="row">
        <div class="col-lg">
          <div class="profile-head">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Write a post</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="edit-profile-tab" data-toggle="tab" href="#edit-profile" role="tab" aria-controls="edit" aria-selected="false">Edit Profile</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg">
          <div class="tab-content profile-tab" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <div class="row">
                <div class="col-md-5">
                  <label>Name</label>
                </div>
                <div class="col-md-6">
                  <p>#{user[0].fullname}</p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-5">
                  <label>Date of Birth</label>
                </div>
                <div class="col-md-6">
                  <p>#{user[0].dob.getDate()}-#{user[0].dob.getMonth()+1}-#{user[0].dob.getFullYear()}</p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-5">
                  <label>Email</label>
                </div>
                <div class="col-md-6">
                  <p>#{user[0].username}</p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-5">
                  <label>Phone</label>
                </div>
                <div class="col-md-6">
                  <p>#{user[0].mobileNumber}</p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-5">
                  <label>Address</label>
                </div>
                <div class="col-md-6">
                  <p>#{user[0].address}</p>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
              <form action="/userPost" method="POST">
                <div class="form-group">
                  <label for="exampleFormControlTextarea1"><i>Share with people who have earned the right to hear your story</i></label>
                  <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Share Your Experience" name="newPost" rows="7" required></textarea>
                  <button type="submit" onclick="myFunc()" class="btn" style="background:#98ca91;">Post</button>
                </div>
              </form>
            </div>
            <div class="tab-pane fade" id="edit-profile" role="tabpanel" aria-labelledby="edit-profile-tab">
              <form action="/userEditProfile" method="POST">
                <div class="row">
                  <div class="col-md-5">
                    <label>Name</label>
                  </div>
                  <div class="col-md-6">
                    <input type="text" name="fullname" style="text-align: center;" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" value="#{user[0].fullname}" required> <br />
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <label>Date of Birth</label>
                  </div>
                  <div class="col-md-6">
                    <input type="date" name="dob" class="form-control" style="text-align: center;" id="exampleInputDOB1" aria-describedby="dobHelp" required> <br />
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <label>Phone</label>
                  </div>
                  <div class="col-md-6">
                    <input type="tel" name="mobNumber" style="text-align: center;" pattern="[0-9]{10}" class="form-control" id="exampleInputNumber1" aria-describedby="numberHelp" value="#{user[0].mobileNumber}" required> <br />
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-5">
                    <label>Address</label>
                  </div>
                  <div class="col-md-6">
                    <input type="text" name="address" style="text-align: center;" class="form-control" id="exampleInputAddress1" aria-describedby="addressHelp" value="#{user[0].address}" required> <br />
                  </div>
                </div>
                <button type="submit" onclick="myFunc1()" class="btn" style="background:#98ca91;">Update</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <footer id="footer" class="colored-section">
    <div class="container-fluid">
      <i class="fab fa-twitter footer-logo"></i>
      <i class="fab fa-facebook-f footer-logo"></i>
      <i class="fab fa-instagram footer-logo"></i>
      <i class="fas fa-envelope footer-logo"></i>
      <p>Â© Copyright 2021 Feel</p>
    </div>
  </footer>
  script.
    function myFunc(){
    const post= $("#exampleFormControlTextarea1").val();
    if(post!=="")
    alert('Posted Successfully');
    }
    function myFunc1(){
    const name= $("#exampleInputName1").val();
    const dob= $("#exampleInputDOB1").val();
    const mob= $("#exampleInputNumber1").val();
    const address= $("#exampleInputAddress1").val();
    if(name!=="" && dob!=="" && mob!=="" && address!=="")
    alert('Updated Successfully');
    }
    function setInputDate(){
      const dat=document.querySelector("#exampleInputDOB1");
      var d = #{user[0].dob.getDate()},m =#{user[0].dob.getMonth()+1},y =#{user[0].dob.getFullYear()};
      var data="";
      if(d < 10){
        d = "0"+d.toString();
      }
      if(m < 10){
        m = "0"+m.toString();
      }
      data = y.toString()+"-"+m.toString()+"-"+d.toString();
      dat.value = data;
    };
</body>

</html>
