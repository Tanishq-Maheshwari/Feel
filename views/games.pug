section#feel-desc.white-section
  .container-fluid.sec-desc.row(style='margin-top:50px;')
    .container-fluid.col-lg-2(style='padding:50px; margin-top:55px;')
      h1 G
      h1 A
      h1 M
      h1 E
      h1 S
    .container-fluid.col-lg-3(style='padding:50px;')
      p Select Genre
      form(method='POST',action='/games')
        button.btn.btn-dark.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/games\'',value='action',name='button') Action
        button.btn.btn-primary.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/games\'',value='strategy',name='button') Strategy
        button.btn.btn-secondary.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/games\'',value='rpg',name='button')  RPG
        button.btn.btn-danger.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/games\'',value='shooter',name='button') Shooter
        button.btn.btn-info.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/games\'',value='adventure',name='button') Adventure
        button.btn.btn-warning.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/games\'',value='puzzle',name='button') Puzzle
        button.btn.btn-secondary.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/games\'',value='racing',name='button') Racing
        button.btn.btn-success.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/games\'',value='sports',name='button') Sports
    .container-fluid.col-lg-6(style='border:1px solid; padding:50px;')
      p Recommended Games:-
      br
      each game in games.results
        p #{game.name}
