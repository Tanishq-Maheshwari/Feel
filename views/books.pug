section#feel-desc.white-section
  .container-fluid.sec-desc.row(style='margin-top:50px;')
    .container-fluid.col-lg-2(style='padding:50px; margin-top:55px;')
      h1 B
      h1 O
      h1 O
      h1 K
      h1 S
    .container-fluid.col-lg-3(style='padding:50px;')
      p Select Genre
      form(method='POST',action='/books')
        button.btn.btn-dark.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/books\'',value='science fiction',name='button') Science Fiction
        button.btn.btn-primary.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/books\'',value='sports',name='button') Sports
        button.btn.btn-secondary.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/books\'',value='comic',name='button')  Comic
        button.btn.btn-danger.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/books\'',value='business',name='button') Business
        button.btn.btn-info.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/books\'',value='biography',name='button') Biography
        button.btn.btn-warning.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/books\'',value='self help',name='button') Self Help
        button.btn.btn-secondary.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/books\'',value='travel',name='button') Travel
        button.btn.btn-success.btn-lg.btn-block(type='submit', onclick='window.location.href=\'/books\'',value='history',name='button') History
    .container-fluid.col-lg-6(style='border:1px solid; padding:50px;')
      p Recommended Music:-
      br
      each book in books.items
        p #{book.volumeInfo.title} by #{book.volumeInfo.authors}

